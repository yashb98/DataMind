# ---- Langfuse Observability ----
LANGFUSE_SECRET_KEY=lf-sk-...
LANGFUSE_PUBLIC_KEY=lf-pk-...
LANGFUSE_HOST=http://localhost:3001
LANGFUSE_SALT=change-me-in-production

# ---- PostgreSQL ----
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datamind
POSTGRES_USER=datamind
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://datamind:changeme@localhost:5432/datamind

